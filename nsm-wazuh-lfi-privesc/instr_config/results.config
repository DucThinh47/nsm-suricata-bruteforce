#DOC: Cai dat Wazuh Manager va dang nhap Wazuh Dashboard
wazuh-manager = monitor:.bash_history : CONTAINS : sudo bash ./wazuh-install.sh -a -p 8080
#DOC: Cai dat Wazuh Agent va ket noi thanh cong toi Wazuh Manager

wazuh-agent = victim:/var/ossec/etc/ossec.conf : CONTAINS : 172.22.0.10
_fim_conf1 = victim:/var/ossec/etc/ossec.conf : CONTAINS : <frequency>30</frequency>
_fim_conf2 = victim:/var/ossec/etc/ossec.conf : CONTAINS : <directories check_all="yes" realtime="yes">/etc,/usr/bin,/bin</directories>
#DOC: Cau hinh quy tac phat hien tan cong LFI


lfi-rule = monitor:/var/ossec/etc/rules/local_rules.xml : CONTAINS : \.\./|\.\.\\|etc/passwd|etc/shadow
_fim_rule1 = monitor:/var/ossec/etc/rules/local_rules.xml : CONTAINS : /etc/passwd
_fim_rule2 = monitor:/var/ossec/etc/rules/local_rules.xml : CONTAINS : /etc/shadow
#DOC: Cau hinh quy tac phat hien leo thang dac quyen

priv-rule = monitor:/var/ossec/etc/rules/local_rules.xml : CONTAINS : ^list$
_agent_conf1 = victim:/var/ossec/etc/ossec.conf : CONTAINS : /var/log/syslog
_agent_conf2 = victim:/var/ossec/etc/ossec.conf : CONTAINS : /var/log/auth.log
_agent_conf3 = victim:/var/ossec/etc/ossec.conf : CONTAINS : ps -e -o pid,uname,command
_agent_conf4 = victim:/var/ossec/etc/ossec.conf : CONTAINS : /var/log/apache2/access.log
_agent_conf5 = victim:/var/ossec/etc/ossec.conf : CONTAINS : /var/log/apache2/error.log
_wazuh_log1 = monitor:/var/ossec/logs/alerts/alerts.log : CONTAINS : 110001
_wazuh_log2 = monitor:/var/ossec/logs/alerts/alerts.log : CONTAINS : 110002
_wazuh_log3 = monitor:/var/ossec/logs/alerts/alerts.log : CONTAINS : 110004
_wazuh_log4 = monitor:/var/ossec/logs/alerts/alerts.log : CONTAINS : 110005
_wazuh_log5 = monitor:/var/ossec/logs/alerts/alerts.log : CONTAINS : 110010
